<div class="center-justified" id="product-header">
  <p>
    <strong>Item:</strong>
    <%= @product.gusti_id %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>
  <p>
    <strong>Current:</strong>
    <%= @product.current %>
  </p>
  <p>
    <strong>Reorder By:</strong>
    <%= "#{@product.display_reorder_date}" %>
  </p>
  <p>
    <strong>Reorder Quantity:</strong>
    <%= "#{@product.actual_reorder_quantity} units" %>
  </p>
</div>

<div id="top-customers-row">
  <div id="last-six">
    <table id='toptable'>
      <h2><strong><u>In the Last 6 Full Months</u></strong></h2>
	  <p><strong>Average monthly sales</strong>: <%= @product.first_half_average_sales %></p>
	  <h3>Top Customers</h3>
      <tr>
        <th>Rank</th>
        <th>Customer</th>
        <th>Units Purchased</th>
      </tr>
      <% @first_half_top_customers.each_with_index do |(customer, quantity), rank| %>
      <tr>
        <td><%= rank + 1 %></td>
          <td><%= customer %></td>
        <td><%= quantity %></td>
      </tr>
      <% end %>
    </table>
    <div class="pie">
      <%= pie_chart @first_half_top_customers %>
    </div>
  </div>
  <div id="previous-six">
    <table id='toptable'>
      <h2><strong><u>In the Previous 6 Full Months</u></strong></h2>
	  <p><strong>Average monthly sales</strong>: <%= @product.second_half_average_sales %></p>
	  <h3>Top Customers</h3>
      <tr>
        <th>Rank</th>
        <th>Customer</th>
        <th>Units Purchased</th>
      </tr>
      <% @second_half_top_customers.each_with_index do |(customer, quantity), rank| %>
      <tr>
        <td><%= rank + 1 %></td>
          <td><%= customer %></td>
        <td><%= quantity %></td>
      </tr>
      <% end %>
    </table>
    <div class="pie">
      <%= pie_chart @second_half_top_customers %>
    </div>
  </div>
</div>

<div id="product-show-bottom-row">
  <div id="column1">
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Home', products_path %>
  </div>
  <div class="product-navigators" id="column2">
    <% if @product.previous_product && @product.previous_product.setup? %>
      <%= link_to 'Previous Product', product_path(@product.previous_product.id) %> |
    <% end %>
    <% if @product.next_product && @product.next_product.setup? %>
      <%= link_to 'Next Product', product_path(@product.next_product.id) %>
    <% end %>
  </div>
</div>
