<h1>Products</h1>

<table class="center" id="products-index-table">
  <thead>
    <tr>
      <th id='item'>Item</th>
      <th id='product-index-description'>Description</th>
      <th>Current</th>
      <th>Reorder By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="products-index-body">
    <% @products.each do |product| %>
      <tr>
        <td><%= product.gusti_id %></td>
        <td><%= link_to product.description , product %></td>
        <td><%= product.current %></td>
        <td><%= product.display_reorder_date %></td>
        <!--  <td><%= link_to 'Edit', edit_product_path(product) %></td> -->
        <!--  <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
