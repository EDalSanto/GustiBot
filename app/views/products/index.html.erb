<h1>Products</h1>

<table class="center">
  <thead>
    <tr>
      <th id='item'>Item</th>
      <th>Description</th>
      <th>Current</th>
      <th>Reorder In</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.gusti_id %></td>
        <td><%= link_to product.description , product %></td>
        <td><%= product.current %></td>
        <td><%= "#{product.reorder_in} days" %></td>
        <!--  <td><%= link_to 'Edit', edit_product_path(product) %></td> -->
        <!--  <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
